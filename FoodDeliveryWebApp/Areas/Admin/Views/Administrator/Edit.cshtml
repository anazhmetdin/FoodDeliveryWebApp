@using FoodDeliveryWebApp.Areas.Admin.ViewModels;
@using FoodDeliveryWebApp.Models.Enums;
@model SellerEditViewModel

<h2>Edit Seller</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="StoreName" class="control-label"></label>
        <input asp-for="StoreName" class="form-control" />
        <span asp-validation-for="StoreName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<SellerStatus>()" class="form-control">
            <option value="">-- Select Status --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-aria ="Admin" asp-action="Index" type="submit" value="Save" class="btn btn-primary" />
        <a asp-aria="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
 