@using FoodDeliveryWebApp.Models.Enums;
@model IEnumerable<FoodDeliveryWebApp.Areas.Admin.ViewModels.SellerViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                <form id="stat" method="post" asp-action="ChangeStatus">
                    <input hidden value="@item.Id" name="SellerId" />
                    <select onchange="handleForm()" asp-for="@item.Status" class="form-control"
                        asp-items="@Html.GetEnumSelectList<SellerStatus>()"
                        name="SellerStatus">
                    </select>
                </form>

                </td>
 

            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>

    </script>
}