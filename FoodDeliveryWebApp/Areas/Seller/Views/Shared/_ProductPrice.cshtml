@model FoodDeliveryWebApp.Models.Product

@if (Model.HasSale)
{
    <td>
        <span style="text-decoration:line-through; color:darkred">
            @Html.DisplayFor(modelItem => Model.Price)
        </span>
        <span style="color:forestgreen;">
            @Html.DisplayFor(modelItem => (Model.Price * Model.Sale / 100))
        </span>
    </td>
}
else
{
    <td>
        @Html.DisplayFor(modelItem => Model.Price)
    </td>
}